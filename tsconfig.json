{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "build",
        "paths": {
            "@router": ["modules/router"],
            "@router/*": ["modules/router/*"],
            "@libs/*": ["modules/libs/*"],
            "@hooks/*": ["modules/hooks/*"],
            "@web-font": ["modules/web-font/web-font.scss"]
        },

        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "resolveJsonModule": true,

        "lib": ["dom", "dom.iterable", "es2018"],
        "typeRoots": ["node_modules/@types"],

        "allowJs": true,
        "checkJs": true,

        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,

        "incremental": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,

        "isolatedModules": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "skipLibCheck": false,
        "downlevelIteration": false,

        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["src/**/*"]
}
