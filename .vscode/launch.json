{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "edge",
			"request": "launch",
			"name": "Debug in Edge",
			"url": "http://localhost:3001",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Debug in Chrome",
			"url": "http://localhost:3001",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Debug Test (dev)",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"sourceMaps": true,
			"restart": true,
			"disableOptimisticBPs": true,
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"test:dev",
				"--",
				"${fileBasenameNoExtension}",
				"--runInBand",
				"-no-cache"
			],
			"skipFiles": [
				"<node_internals>/**/*.js"
			],
			"protocol": "inspector",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Debug Test (qa)",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"sourceMaps": true,
			"restart": true,
			"disableOptimisticBPs": true,
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"test:qa",
				"--",
				"${fileBasenameNoExtension}",
				"--runInBand",
				"-no-cache"
			],
			"skipFiles": [
				"<node_internals>/**/*.js"
			],
			"protocol": "inspector",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
